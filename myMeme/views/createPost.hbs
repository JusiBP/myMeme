<form action="/createpost" method="POST" class="w-25 mx-auto m-5">
        <div class="mb-3">
            <label for="Url/Image" class="form-label" ></label>
            <input type="text" class="form-control" id="title" name="title" placeholder="ImageUrl" value="{{movie.title}}">
        </div>
        <div class="mb-3">
            <label for="genre" class="form-label">Genre</label>
            <input type="text" class="form-control" id="genre" name="genre" placeholder="Category" value="{{movie.genre}}">
        </div>
        <div class="mb-3">
            <label for="plot" class="form-label">Plot</label> 
            <input type="text" class="form-control" id="cast" name="plot" placeholder="Description" value="{{movie.plot}}">
        </div>
        
        
            <button type="submit" class="btn btn-primary">Save</button>
    </form>



