<form action="/{{userInfo._id}}/{{_id}}/postEdit" method="POST" class="w-25 mx-auto m-5">
    <div class="mb-3">
        <label for="file" class="form-label text-white" >Change your meme</label>
        <input type="file" class="form-control-file" id="file" name="memeUrl">
    </div>
    <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="category" id="category">
                <option>{{category}}</option>
                <option value="Random">Random</option>
                <option value="Animals">Animals</option>
                <option value="WTF">WTF</option>
                <option value="Sports">Sports</option>
                <option value="Gaming">Gaming</option>
                <option value="Politics">Politics</option>
                <option value="News">News</option>
                <option value="Anime&Manga">Anime &/38 Manga</option>
                <option value="TV">TV</option>
                <option value="Classics">Classics</option>
            </select>
        </div>
    <div class="form-floating mb-3">
        <textarea class="form-control" value="{{description}}" id="description" name="description" style="height: 100px"></textarea> 
        <label for="description">Current description: {{description}}</label>
    </div>
        <button class="btn btn-secondary" type="submit">Save</button>
</form>
<form action="/{{userInfo._id}}/{{_id}}/delete" method="POST" class="w-25 mx-auto m-5">
        <button class="btn btn-danger" type="submit">Delete</button>
</form>