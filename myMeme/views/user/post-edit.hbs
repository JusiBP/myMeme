<form action="/{{idUser}}/{{idPost}}" method="POST" class="w-25 mx-auto m-5" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="file" class="form-label text-white" >Change your meme</label>
        <input type="file" class="form-control-file" id="file" name="memeUrl">
    </div>
    <div class="mb-3">
        <label for="category" class="form-label text-white">Category</label>
        <input type="text" class="form-control" id="category" name="category" value="{{category}}">
    </div>
    <div class="mb-3">
        <textarea class="form-control" value="{{description}}" id="description" name="description" style="height: 100px"></textarea> 
        <label for="description">Description</label>
    </div>
        <a class="btn btn-primary m-3" href="/{{idUser}}/{{idPost}}/edit">Save</a>
        <button class="btn btn-secondary" type="submit">Delete</button>
</form>