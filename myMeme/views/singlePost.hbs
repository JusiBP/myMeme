<div class="postBox">
<div class="container-fluid">
    <div class="row">
        <div class="blockColor singlePostUser">
            <a href="/{{post.userInfo.username}}" class="text-mymemeUser">{{post.userInfo.username}}</a>
        </div>
        <hr></hr>
        <div class="blockColor">
            <img src={{post.memeUrl}} class="img-fluid singlePostImg" alt="meme">
        </div>
        <div class="blockColor">
            <h5 class="singlePostDate">{{post.date}}</h5>
            <p class="singlePostInfo">{{post.description}}</p>

        </div>
        
        <form action="/{{idUser}}/{{idPost}}" method="POST" class="w-25 mx-auto m-5" enctype="multipart/form-data">
           {{likesCount}}
             
           
           {{#if alreadyLiked}}
           <input  type="submit" name="like" value="Liked!" class="fa fa-home"/>
           {{!-- <input type="image" src="/images/userImage.png" type="submit" name="like"/>  --}}
           {{else}}
           {{!-- <input type="image" src="/images/newcreatepost.png" type="submit" name="like"/> --}}
           <input  type="submit" name="like" value="Like" class="fa fa-home"/>

           {{/if}}
            
           
         
</form>
    </div>
    
</div>
</div>

